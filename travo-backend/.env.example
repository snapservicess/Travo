# Travo Backend Environment Configuration
# Copy this to .env and update with your actual values

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/travo-db
DB_NAME=travo-db

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-here
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here
JWT_ACCESS_TOKEN_EXPIRY=1h
JWT_REFRESH_TOKEN_EXPIRY=7d

# Server Configuration
PORT=3001
NODE_ENV=development

# Email Configuration (Gmail SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
# Note: For Gmail, use App Password, not regular password
# Generate at: https://myaccount.google.com/apppasswords

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890
# Get these from: https://console.twilio.com/

# Push Notification Configuration (Firebase)
# FIREBASE_SERVER_KEY=your-firebase-server-key
# FIREBASE_PROJECT_ID=your-firebase-project-id

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration (for frontend domain)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:19006,exp://192.168.1.100:19000

# Demo Mode (set to true to use demo notifications without real email/SMS)
DEMO_MODE=true

# Notification Service Configuration
NOTIFICATION_RETRY_ATTEMPTS=3
NOTIFICATION_TIMEOUT=30000
BULK_NOTIFICATION_BATCH_SIZE=50

# Emergency Configuration
EMERGENCY_RESPONSE_TIME_MINUTES=5
EMERGENCY_ESCALATION_TIME_MINUTES=15

# Safety Score Configuration
SAFETY_UPDATE_INTERVAL_HOURS=6
SAFETY_ALERT_THRESHOLD=3.0